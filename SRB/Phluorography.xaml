        <Button x:Name="getFluor" Content="отметить" HorizontalAlignment="Center" Margin="0,318,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Bahnschrift SemiCondensed" Width="194" Height="37" Background="#FF99E8D4"/>
        <Label x:Name="patient" Content="пациент" HorizontalAlignment="Center" Margin="0,101,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Bahnschrift SemiBold Condensed" Width="76"/>

    </Grid>
</Window>
