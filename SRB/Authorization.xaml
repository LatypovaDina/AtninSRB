        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid OpacityMask="#FFEDC1C1" Background="#FFD6F1E6">
        <Image Grid.Row="1" Grid.Column="1" Margin="277,27,473,362" Source="/ICON.png" Stretch="Fill"/>
        <Label Grid.Row="1" Content="ГАУЗ “Атнинская ЦРБ”" HorizontalAlignment="Left" Margin="332,36,0,0" VerticalAlignment="Top" FontFamily="Impact" Height="36" Width="198" FontSize="20" FontWeight="Light" FontStretch="Expanded" Cursor="AppStarting"/>
